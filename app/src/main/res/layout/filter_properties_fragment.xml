<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/filter_property_type_tv"
            style="@style/Theme.RealEstateManager.FilterPropertySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filter_property_type_textInputLayout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_property_type_tv">

            <AutoCompleteTextView
                android:id="@+id/filter_property_type_actv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/filter_property_price_tv"
            style="@style/Theme.RealEstateManager.FilterPropertySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_property_type_textInputLayout" />

        <TextView
            android:id="@+id/filter_property_price_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text="@string/price_currency_in_n"
            app:layout_constraintBottom_toBottomOf="@+id/filter_property_price_tv"
            app:layout_constraintStart_toEndOf="@+id/filter_property_price_tv"
            app:layout_constraintTop_toTopOf="@+id/filter_property_price_tv"
            tools:text="(in $)" />


        <com.google.android.material.slider.RangeSlider
            android:id="@+id/filter_property_price_rangeSlider"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_property_price_tv"
            tools:valueFrom="1"
            tools:valueTo="100.0" />


        <TextView
            android:id="@+id/filter_property_surface_tv"
            style="@style/Theme.RealEstateManager.FilterPropertySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_property_price_rangeSlider" />

        <TextView
            android:id="@+id/filter_property_surface_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/surface_unit_in_n"
            app:layout_constraintBottom_toBottomOf="@id/filter_property_surface_tv"
            app:layout_constraintStart_toEndOf="@id/filter_property_surface_tv"
            app:layout_constraintTop_toTopOf="@id/filter_property_surface_tv"
            tools:text="(in sq ft)" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/filter_property_surface_rangeSlider"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_property_surface_tv"
            tools:valueFrom="0"
            tools:valueTo="100.0" />


        <TextView
            android:id="@+id/filter_property_city_tv"
            style="@style/Theme.RealEstateManager.FilterPropertySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_property_surface_rangeSlider" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filter_property_city_textInputLayout"
            style="@style/Theme.RealEstateManager.AddPropertyTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:imeOptions="actionDone"
            android:hint="Address, neighborhood, city..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_property_city_tv">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filter_property_city_editText"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
*
        <TextView
            android:id="@+id/filter_property_entry_date_tv"
            style="@style/Theme.RealEstateManager.FilterPropertySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entry date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_property_city_textInputLayout" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filter_property_entry_date_chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:singleSelection="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_property_entry_date_tv">

            <com.google.android.material.chip.Chip
                android:id="@+id/filter_property_more_than_6_months_radio"
                style="@style/Theme.RealEstateManager.ChipSingleSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="+ 6mths" />


            <com.google.android.material.chip.Chip
                android:id="@+id/filter_property_entry_date_less_than_6_months_radio"
                android:layout_width="wrap_content"
                style="@style/Theme.RealEstateManager.ChipSingleSelection"
                android:layout_height="wrap_content"
                android:text="&lt; 3mths" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filter_property_entry_date_less_than_1_month_radio"
                android:layout_width="wrap_content"
                style="@style/Theme.RealEstateManager.ChipSingleSelection"
                android:layout_height="wrap_content"
                android:text="&lt; 1mth" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filter_property_entry_date_less_than_1_week_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.RealEstateManager.ChipSingleSelection"
                android:text="&lt; 1wk" />

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/filter_property_entry_sale_state_tv"
            style="@style/Theme.RealEstateManager.FilterPropertySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Available for sale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_property_entry_date_chipGroup" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/filter_property_entry_sale_state_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/filter_property_entry_sale_state_tv"

            app:layout_constraintStart_toEndOf="@+id/filter_property_entry_sale_state_tv"
            app:layout_constraintTop_toTopOf="@+id/filter_property_entry_sale_state_tv"
            app:thumbIconTint="@color/secondary"
            app:thumbTint="@color/secondary" />


        <Button
            android:id="@+id/filter_property_cancel_btn"
            style="@style/Theme.RealEstateManager.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp"
            android:text="Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/filter_property_filter_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_property_entry_sale_state_tv" />

        <Button
            android:id="@+id/filter_property_filter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary"
            android:text="View 24 results"
            app:layout_constraintBottom_toBottomOf="@+id/filter_property_cancel_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/filter_property_cancel_btn"
            app:layout_constraintTop_toTopOf="@id/filter_property_cancel_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>