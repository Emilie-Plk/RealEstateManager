<resources>
    <!-- Base application theme. -->
    <style name="Theme.RealEstateManager" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/cherry_red</item>
        <item name="colorPrimaryContainer">@color/almost_white</item>
        <item name="colorOnPrimaryContainer">@color/secondary</item>
    </style>

    <style name="Theme.RealEstateManager.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="title">@string/app_name</item>
        <item name="titleTextColor">@color/almost_white</item>
        <item name="subtitleTextColor">@color/almost_white</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="navigationIconTint">@color/secondary_dark</item>
    </style>

    <style name="Theme.RealEstateManager.SplashTheme" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
  duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.RealEstateManager</item>
    </style>

    <style name="Theme.RealEstateManager.YellowFab" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/secondary</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.RealEstateManager.Button" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="backgroundTint">@color/button_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.RealEstateManager.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/lighter_gray</item>
    </style>

    <style name="Theme.RealEstateManager.PropertyTypeTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.RealEstateManager.GrayTextSubheading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.RealEstateManager.PropertyPrice">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/secondary_dark</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Theme.RealEstateManager.PropertyItemCardView">
        <item name="cardBackgroundColor">@color/almost_white</item>
        <item name="cardCornerRadius">6dp</item>
    </style>

    <style name="Theme.RealEstateManager.TitleTV">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ADD PROPERTY-->

    <style name="Theme.RealEstateManager.AddPropertySubtitle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.RealEstateManager.AddPropertyTextInputLayout">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="boxBackgroundColor">@color/secondary_translucent</item>
        <item name="android:background">@color/secondary_translucent</item>
    </style>

    <style name="Theme.RealEstateManager.FilledTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="boxBackgroundColor">@color/secondary_translucent</item>
        <item name="android:background">@color/secondary_translucent</item>
    </style>

    <style name="Theme.RealEstateManager.SubmitButton" parent="ThemeOverlay.Material3.Button">
        <item name="android:backgroundTint">@drawable/submit_btn_selector</item>
    </style>


    <!-- FILTER PROPERTY-->

    <style name="Theme.RealEstateManager.FilterPropertySubtitle">
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">8sp</item>
        <item name="android:layout_marginTop">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.RealEstateManager.TextOverlayTransparentGray">
        <item name="android:background">@drawable/rounded_corners_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.RealEstateManager.ButtonGroup" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_group_color</item>
        <item name="android:textColor">@color/button_group_text_color</item>
    </style>


    <style name="Theme.RealEstateManager.ChipFilter" parent="Widget.Material3.Chip.Filter.Elevated">
        <item name="chipBackgroundColor">@color/button_group_color</item>
        <item name="android:textColor">@color/button_group_text_color</item>
        <item name="checkedIconTint">@color/secondary</item>
    </style>


</resources>