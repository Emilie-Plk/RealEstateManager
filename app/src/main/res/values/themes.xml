<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.RealEstateManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/cherry_red</item>
    </style>

    <style name="Theme.RealEstateManager" parent="Base.Theme.RealEstateManager" />

    <style name="Theme.RealEstateManager.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/almost_white</item>
        <item name="colorOnPrimary">@color/almost_white</item>
        <item name="navigationIconTint">@color/almost_white</item>

    </style>

    <style name="Theme.RealEstateManager.PropertyTypeTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.RealEstateManager.GrayTextSubheading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.RealEstateManager.PropertyPrice">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/secondary_dark</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.RealEstateManager.PropertyItemCardView">
        <item name="cardBackgroundColor">@color/almost_white</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="Theme.RealEstateManager.PropertyItemLogo">
        <item name="android:tint">@color/primary</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="Theme.RealEstateManager.PropertyItemLogoGray">
        <item name="android:tint">@color/lighter_gray</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="Theme.RealEstateManager.DetailTitle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ADD PROPERTY-->
    <style name="Theme.RealEstateManager.PropertyTypeRadioButton">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.RealEstateManager.AddPropertyTitle">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.RealEstateManager.AddPropertySubtitle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.RealEstateManager.AddPropertyTextInputLayout">
        <item name="boxBackgroundColor">@color/secondary_translucent</item>
        <item name="android:background">@color/secondary_translucent</item>

    </style>

</resources>